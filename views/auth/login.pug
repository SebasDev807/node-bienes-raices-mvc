extends ../layout/index

block contenido
    div
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= page

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow 
                form.space-y-5
                    div 
                        label(for="email").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Tu email
                        input(placeholder="Tu Email" type="email")#email.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400
